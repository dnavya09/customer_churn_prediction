# Normalize all text files
* text=auto

# Specific settings for Python files
*.py text eol=lf

# Treat certain files as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.mp4 binary
*.mov binary
*.mp3 binary
*.wav binary
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.zip binary
*.tar binary
*.gz binary

# Treat joblib files as binary
*.joblib binary
*.h5 binary
*.pkl binary

# Custom settings for JSON and CSV files
*.json text eol=lf
*.csv text eol=lf

# Custom merge driver for Jupyter notebooks
*.ipynb merge=union
